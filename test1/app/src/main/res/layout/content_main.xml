<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#2cc950"
android:paddingBottom="@dimen/activity_vertical_margin"

android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="com.example.zhangbeihua.test1.MainActivity"
tools:showIn="@layout/activity_main">

<Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="点我切换！"
    android:textColor="#f439ea"
    android:textSize="40dp"
    android:layout_gravity="center"
    android:id="@+id/btnSwitch" />


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10px"
    android:orientation="vertical"
    android:background="#FFFFFFFF">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#10c6f9"
        android:layout_margin="10px"
        android:id="@+id/etGoalMoney"
        android:hint="你期望的金钱数"
        android:inputType="none"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="哈哈，赚钱！"
        android:layout_margin="10px"
        android:textColor="#f439ea"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:id="@+id/tvGetMoney"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="哈哈，点击赚钱！"
        android:background="#da0909"
        android:layout_margin="10px"
        android:id="@+id/btnGetMoney"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="哈哈，点击亏钱！"
        android:background="#ecef3f"
        android:layout_margin="10px"
        android:id="@+id/btnLoseMoney"/>
</LinearLayout>


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20px"
    android:orientation="vertical"
    android:background="#FFFFFFFF">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间去哪儿了"
        android:textColor="#f439ea"
        android:textSize="20dp"
        android:layout_gravity="center"/>
    <ImageButton
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@drawable/timegoing"
        android:id="@+id/ibTimeGoing"
        android:layout_gravity="center"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/pbTimeWaiting"/>
</LinearLayout>


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10px"
    android:orientation="vertical"
    android:background="#FFFFFFFF">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你幸福吗"
        android:textColor="#f439ea"
        android:textSize="20dp"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rgSurvery">
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="幸福！"
            android:id="@+id/rbSoHappy"/>
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="不幸福！"
            android:id="@+id/rbNoHappy"/>
    </RadioGroup>
</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10px"
    android:orientation="vertical"
    android:background="#FFFFFFFF">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课外活动"
        android:textColor="#f439ea"
        android:textSize="20dp"/>
    <CheckBox
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="LOL！"
        android:id="@+id/cbLOL"/>
    <CheckBox
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="跑步！"
        android:id="@+id/cbRuning"/>
</LinearLayout>







</LinearLayout>